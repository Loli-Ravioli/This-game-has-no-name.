body,
html {
    font: 16px/1.4 Georgia, serif;
}

    @media only screen and (max-width: 500px){
        body,html{
            font-size 14px;
        }
    }


.page{
max-width 400px;
    padding 2rem;
    margin 0 auto;
    text-align center;
    user-select none;
}
h1{
    font: 2rem/1.2 Georgia, serif;
    margin-bottom 1em;
}
.fifteen{
    width 100%;
    padding-bottom 100%;
    background white;
    margin-bottom 1.5rem
    position relative;
    .item{
        position absolute;
        left 0;
        top 0;
        width 25%;
        height 25%;
        margin 0;
        padding 0;
        border 0 none;
        color #0c7432;
        background black;
        font-size 2rem;
        cursor pointer;
        outline:none;
        box-shadow: inset 1px 1px #e5d6f6, inset -1px -1px #e5d6f6;
        transition transform 0.4s, filter 0.5s;
        &Val{
            display flex;
            align-items center
            justify-content center;
            width 84%
            height 84%
            margin 8%
            box-shadow inset 0 0 0 2px #8552fd;
        }
    }
    &Won{
        .item{
            filter: brightness(150%);
        }
    }
}
    .button{
        color white;
        background black;
        font: 1.2rem/1.4 Georgia, serif;
        border none;
        cursor pointer;
        padding 0.5em 1.5em;
        &:hover{
            background #8552fd
        }
    }